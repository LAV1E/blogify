<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>All Blogs</title>
  <style>
    .fade-in {
      animation: fadeIn 0.8s ease-in-out;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .card:hover {
      transform: scale(1.02);
      transition: transform 0.3s ease-in-out;
    }
  </style>
</head>
<body class="bg-light">
  <%- include('./partials/nav') %>

  <div class="container py-5 fade-in">
    <h2 class="mb-4 fw-bold text-center">All Blogs</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% blogs.forEach(blog => { %>
        <div class="col">
          <div class="card h-100 shadow-sm border-0">
            <% if (blog.coverImageURL) { %>
              <img src="<%= blog.coverImageURL %>" class="card-img-top rounded-top" alt="Cover Image" style="height: 200px; object-fit: cover;">
            <% } %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title fw-semibold mb-3"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-outline-primary mt-auto">View Blog</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <%- include('./partials/scripts') %>
</body>
</html>
