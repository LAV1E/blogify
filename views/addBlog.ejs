<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>Add New Blog</title>
  <style>
    .fade-in {
      animation: fadeIn 0.8s ease-in-out;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .form-container {
      max-width: 650px;
      margin: 50px auto;
    }
  </style>
</head>
<body class="bg-light">
  <%- include('./partials/nav') %>

  <div class="container form-container fade-in">
    <div class="card shadow-lg border-0 rounded-4">
      <div class="card-body p-4 p-md-5">
        <h2 class="text-center mb-4 fw-bold text-primary">Add New Blog</h2>

        <form action="/blog" method="POST" enctype="multipart/form-data" novalidate>
          <!-- Cover Image -->
          <div class="mb-3">
            <label for="coverImage" class="form-label fw-semibold">Cover Image</label>
            <input type="file" class="form-control" id="coverImage" name="coverImage" accept="image/*">
          </div>

          <!-- Title -->
          <div class="mb-3">
            <label for="title" class="form-label fw-semibold">Title</label>
            <input type="text" class="form-control" id="title" name="title" required placeholder="Enter blog title">
          </div>

          <!-- Body -->
          <div class="mb-4">
            <label for="body" class="form-label fw-semibold">Body</label>
            <textarea class="form-control" id="body" name="body" rows="8" required placeholder="Write your blog here..."></textarea>
          </div>

          <!-- Submit Button -->
          <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg shadow-sm">Submit Blog</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <%- include('./partials/scripts') %>
</body>
</html>
