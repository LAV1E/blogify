<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>Sign In Page</title>
</head>
<body class="bg-light d-flex align-items-center justify-content-center vh-100">

  <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 420px; width: 100%;">
    <h2 class="text-center text-secondary mb-4 fw-semibold">Sign In</h2>

    <% if (typeof error !== "undefined") { %>
      <div class="alert alert-danger py-2 px-3 text-center"><%= error %></div>
    <% } %>

    <form action="/user/signin" method="POST">
      <div class="mb-3">
        <label for="email" class="form-label fw-medium">Email</label>
        <input type="email" id="email" name="email" class="form-control rounded-3" placeholder="example@mail.com" required>
      </div>

      <div class="mb-4">
        <label for="password" class="form-label fw-medium">Password</label>
        <input type="password" id="password" name="password" class="form-control rounded-3" placeholder="Enter your password" required>
      </div>

      <div class="d-grid">
        <button type="submit" class="btn btn-secondary btn-lg fw-semibold">Sign In</button>
      </div>
    </form>
  </div>

  <%- include('./partials/scripts') %>
</body>
</html>
